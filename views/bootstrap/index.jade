html
	head
		title alphabet 搜索
		link(rel="shortcut icon" href="/img/favicon.ico?v=2" )
		link(rel="stylesheet", media="screen and (max-device-width: 600px)", href="/css/tiny.css")
		link(rel="stylesheet", href="/css/bootstrap.css")
		script(src="https://cdn.bootcss.com/jquery/1.12.0/jquery.min.js")
		meta(name="viewport",content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
	body
		.header
			nav.navbar.navbar-inverse.navbar-fixed-top.navbar-default
				.container
					#navbar-header.navbar-header(data-turbolinks-permanent='')
						a.navbar-brand(href='/')
							img(alt="Brand" src='/img/logo.png')
					span#main-nav-menu(data-turbolinks-temporary='')
						ul.nav.navbar-nav
							li.active
								a(href='/bootstrap') 搜索
							li
								a(href='/search') 旧版
							li
								a(target='_blank', href='https://pnpardise.wicp.net/list.html') 社区
					ul.nav.user-bar.navbar-nav.navbar-right
						li
							a(href='/account/sign_up') 注册
						li
							a(href='/account/sign_in') 登录
					ul.nav.navbar-nav.navbar-right
						li.nav-search.hidden-xs.hidden-sm
							form.navbar-form.form-search.active(action='/bootstrap', method='GET')
								.form-group
									input.form-control(name='q', type='text', value='', placeholder='搜索google')
								i.fa.btn-search.fa-search(onclick='document.forms[0].submit()')
		#main.main-container.container
			.row
				.col-md-9
					if(items)
						.topics.panel.panel-default
							.panel-heading.clearfix
								.filter.pull-right
									span.l= total
									if(hint)
										span= ' 实际搜索: ' + hint
									if(orig)
										span= ' 还原搜索: ' 
											a(href= root +'?q='+ orig + '&orig=true')= orig
									if(advice)
										span= ' 搜索建议: '
											a(href= root + '?q=' + advice)= advice
									|	/
									a.popular(href='/search')
										i.fa.fa-diamond
										| 上升最快
									|	/
									a(href='/search') 搜索更多
						
					
							.panel-body
								for item in items
									.topic.media
										.infos.media-body
											if(item.link.constructor == Array)
												.title.media-heading
													a(title=item.title)= item.title
												for link in item.link
													a(href= link.href, target='_blank')
														img(src= link.src)
											else
												.title.media-heading
													a(title=item.title, href=item.link, target='_blank')= item.title
												.info
													span.hidden-mobile= item.description
														a.soft-link(href= '/redirect?url=' + item.link, target='_blank') SNAPSHOT
										
									
						if(pagin)
							.panel-footer.clearfix
								ul.pagination
									for pageItem in pagin
										if(pageItem.active)
											li
												a(href='/bootstrap?q=' + keyword + '&page=' + pageItem.page)= pageItem.text
										else
											li.active
												a(href='/bootstrap?q=' + keyword + '&page=' + pageItem.page)= pageItem.text
											
					
				.sidebar.col-md-3
					if(relevants && relevants.length)
						.panel.panel-default
							.panel-heading 相关搜索
							ul.list-group
								for relevant in relevants
									li.list-group-item
										a(href= '/bootstrap?q='+relevant)= relevant
		footer.footer 
			.container
				i.fa.fa-copyright 2016 about pn-paradise 
				| 
				a(href='mailto:609888703@qq.com') contact